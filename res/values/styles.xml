<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <style name="RideSyncer" parent="@android:style/Theme.Holo.Light.DarkActionBar">
        <item name="android:editTextStyle">@style/RideSyncer.Widget.EditText</item>
        <item name="android:buttonStyle">@style/RideSyncer.Widget.Button</item>
        <item name="android:textViewStyle">@style/RideSyncer.Widget.TextView</item>
        <item name="android:ratingBarStyle">@style/RideSyncer.Widget.RatingBar</item>
        <item name="android:ratingBarStyleSmall">@style/RideSyncer.Widget.RatingBar</item>

        <!-- action bar -->
        <item name="android:actionBarStyle">@style/MyActionBar</item>
        <item name="android:actionBarTabTextStyle">@style/MyActionBarTabText</item>
        <item name="android:actionBarWidgetTheme">@style/MyActionBarWidget</item>
    </style>

    <style name="MyActionBarWidget" parent="android:Theme.Holo.Light">
        <item name="android:popupMenuStyle">@android:style/Widget.Holo.Light.PopupMenu</item>
        <item name="android:dropDownListViewStyle">@android:style/Widget.Holo.Light.ListView.DropDown</item>
    </style>

    <!-- ActionBar styles -->
    <style name="MyActionBar" parent="@android:style/Widget.Holo.Light.ActionBar.Solid">
        <item name="android:background">@color/medium_blue</item>
        <item name="android:actionDropDownStyle">@android:style/Widget.Holo.Spinner</item>
        <item name="android:titleTextStyle">@style/MyActionBarTitleText</item>
    </style>

    <!-- ActionBar title text -->
    <style name="MyActionBarTitleText" parent="@android:style/TextAppearance.Holo.Widget.ActionBar.Title">
        <item name="android:textColor">@color/white</item>
    </style>

    <!-- ActionBar tabs text styles -->
    <style name="MyActionBarTabText" parent="@android:style/Widget.Holo.ActionBar.TabText">
        <item name="android:textColor">@color/dark_blue</item>
    </style>

    <style name="RideSyncer.TextAppearance" parent="@android:style/TextAppearance">
        <item name="android:textSize">15sp</item>
        <item name="android:textColor">@color/dark</item>
    </style>

    <style name="RideSyncer.Widget.EditText" parent="@android:style/Widget.EditText">
        <item name="android:background">@drawable/input</item>
        <item name="android:paddingTop">8dp</item>
        <item name="android:paddingBottom">8dp</item>
        <item name="android:paddingLeft">10dp</item>
        <item name="android:paddingRight">10dp</item>
    </style>

    <style name="RideSyncer.Widget.TextView" parent="@android:style/Widget.TextView">
        <item name="android:textAppearance">@style/RideSyncer.TextAppearance</item>
    </style>

    <style name="RideSyncer.Widget.RatingBar" parent="@android:style/Widget.Holo.RatingBar.Small">
        <item name="android:progressDrawable">@drawable/rating</item>
        <item name="android:minHeight">22dp</item>
        <item name="android:maxHeight">22dp</item>
    </style>

    <style name="RideSyncer.Widget.Button" parent="@android:style/Widget.Button">
        <item name="android:background">@drawable/btn</item>
        <item name="android:textColor">@color/light</item>
        <item name="android:textSize">18sp</item>
        <item name="android:paddingTop">8dp</item>
        <item name="android:paddingBottom">8dp</item>
        <item name="android:paddingLeft">10dp</item>
        <item name="android:paddingRight">10dp</item>
    </style>

    <style name="LoginFormContainer">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">16dp</item>
    </style>

</resources>